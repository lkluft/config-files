# ssh configuration file

# settings for university servers
Host cen-login
    Hostname login.cen.uni-hamburg.de
    User u300509

Host thunder7 *t7
    Hostname thunder7.cen.uni-hamburg.de
    LocalForward 4243 localhost:4242
    User u300509

Host tt7
    ProxyCommand ssh -W %h:%p cen-login

Host mistral
    Hostname mistral.dkrz.de
    User u300509

Host mistralpp
    Hostname mistralpp01.dkrz.de
    LocalForward 4244 localhost:4242
    User u300509

Host mistral-mpi
    Hostname mistral
    User m300575

Host mistralpp-mpi
    Hostname mistralpp
    User m300575

Host git.mpimet.mpg.de
    IdentityFile ~/.ssh/id_ecdsa_git_aes
    User git

# general settings for all hosts
Host *
    AddKeysToAgent yes
    Compression yes
    ForwardAgent yes
    ForwardX11 no
    ForwardX11trusted no
    HashKnownHosts yes
    LogLevel ERROR
    ServerAliveInterval 60
