# ssh configuration file

# settings for university servers
Host login
    Hostname login.cen.uni-hamburg.de
    User u300509

Host thunder7 t7
    ForwardX11 yes
    ForwardX11trusted yes
    Hostname thunder7
    LocalForward 4242 localhost:4242
    LocalForward 5353 localhost:5353
    ProxyCommand ssh -q login nc -q0 %h 22
    User u300509

Host apple
    Hostname apple157.cen.uni-hamburg.de
    ProxyCommand ssh -q login nc -q0 %h 22
    User u300509
    # **Very specific** osx settings.
    # AddKeysToAgent yes
    # UseKeyChain no

Host lehre3 lehre squall3 squall
    ForwardX11 yes
    ForwardX11trusted yes
    Hostname squall3
    ProxyCommand ssh -q login nc -q0 %h 22
    User u300509

Host mistral-uhh
    Hostname mistral.dkrz.de
    User u300509

Host mistral-mpi
    Hostname mistral.dkrz.de
    User m300575

Host git.mpimet.mpg.de
    IdentityFile ~/.ssh/id_ecdsa_git_aes
    User git

# personal machines
Host acer medion
    Hostname %h.local
    Port 8787
    User lukas

# general settings for all hosts
Host *
    Compression yes
    ForwardAgent yes
    ForwardX11 no
    ForwardX11trusted no
    HashKnownHosts yes
    LogLevel ERROR
