# ssh configuration file

# settings for university servers
Host login
    Hostname login.cen.uni-hamburg.de
    User u300509

Host thunder7 t7
    Hostname thunder7.cen.uni-hamburg.de
    LocalForward 4201 localhost:4201
    ProxyCommand ssh -q login nc -q0 %h 22
    User u300509

Host mistral-uhh
    Hostname mistral.dkrz.de
    LocalForward 4202 localhost:4202
    User u300509

Host mistralpp-uhh
    Hostname mistralpp.dkrz.de
    LocalForward 4203 localhost:4203
    User u300509

Host mistral-mpi
    Hostname mistral.dkrz.de
    LocalForward 4204 localhost:4204
    User m300575

Host mistralpp-mpi
    Hostname mistralpp.dkrz.de
    LocalForward 4205 localhost:4205
    User m300575

Host git.mpimet.mpg.de
    IdentityFile ~/.ssh/id_ecdsa_git_aes
    User git

# general settings for all hosts
Host *
    Compression yes
    ForwardAgent yes
    ForwardX11 no
    ForwardX11trusted no
    HashKnownHosts yes
    LogLevel ERROR
