# ssh configuration file

# settings for university servers
Host login
    Hostname login.cen.uni-hamburg.de
    User u300509

Host thunder7 t7
    Hostname thunder7.cen.uni-hamburg.de
    LocalForward 4201 localhost:4201
    User u300509
    ProxyCommand ssh -W %h:%p login

Host mistral
    Hostname mistral.dkrz.de
    LocalForward 4202 localhost:4202
    User u300509

Host mistralpp
    Hostname mistralpp1
    LocalForward 4203 localhost:4203
    User u300509
    ProxyCommand ssh -W %h:%p mistral

Host mistral-mpi
    Hostname mistral
    User m300575

Host mistralpp-mpi
    Hostname mistralpp
    User m300575

Host git.mpimet.mpg.de
    IdentityFile ~/.ssh/id_ecdsa_git_aes
    User git

# general settings for all hosts
Host *
    Compression yes
    ForwardAgent yes
    ForwardX11 no
    ForwardX11trusted no
    HashKnownHosts yes
    LogLevel ERROR
